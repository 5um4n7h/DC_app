<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".PaymentsActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/logo"
       android:layout_marginTop="30dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2C2E2E"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="55dp"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <Button
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:text="SIGN UP"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:layout_width="160dp"
                android:layout_height="match_parent"
                app:backgroundTint="#2C2E2E"
                android:text="LOGIN"
                android:textSize="18dp"
                android:background="#2C2E2E"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="320dp"
            android:layout_height="262dp"
            android:layout_marginTop="0dp"
            android:background="#2C2E2E"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/edemailsignin"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/curvedbutton"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:textColor="@color/white"
                android:textColorHint="#D8CACA"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edpasswordsignin"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/curvedbutton"
                android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"
                android:drawableRight="@drawable/ic_baseline_remove_red_eye_24"
                android:hint="Password"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/white"
                android:textColorHint="#D8CACA"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp"
                android:text="FORGOT PASSWORD ?"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnsignin"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/curvedbutton"
                android:text="Login"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:backgroundTint="#1AA6B8" />

        </LinearLayout>
    </LinearLayout>

    <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USE SOCIAL NETWORKS"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="320dp"
            android:layout_height="52dp"
            android:gravity="center"
            android:text="By continiuing,I agree to the Terms of Service and Privacy Policy"
            android:textColor="@color/lightblack"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints" />

</LinearLayout>