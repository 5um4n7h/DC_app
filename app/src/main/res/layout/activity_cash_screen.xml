<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".CashScreenActivity">


    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@color/green"/>

        <TextView
            android:id="@+id/tvcash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash"
            android:textSize="23dp"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/bbtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank Balance"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="50dp"
            android:layout_below="@+id/tvcash"
            android:layout_marginTop="70dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bbtv"
            android:text="$0.00"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/credit"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1">

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/rell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/grey"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ellipsegrey" />

                <ImageView
                    android:layout_width="1500dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="44dp"
                    android:src="@drawable/ellipse_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="72sp" />


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="220dp"
                    android:src="@drawable/curve"/>



            </RelativeLayout>



        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="Money sorter helps you understand \n your spends and guides you to save"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv"
                android:layout_marginTop="30dp"
                android:text="Link Account"
                android:background="@drawable/blue_button"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"/>



        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>