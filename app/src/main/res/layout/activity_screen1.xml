<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen1"
    android:background="#EDE4F4">

    <ImageView
        android:id="@+id/screenimg2"
        android:layout_width="228dp"
        android:layout_height="462dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-44dp"
        android:layout_marginTop="-151dp"
        android:layout_marginEnd="227dp"
        android:src="@drawable/screen2img" />

    <ImageView
        android:id="@+id/screenimg"
        android:layout_width="228dp"
        android:layout_height="462dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="272dp"
        android:layout_marginTop="409dp"
        android:layout_marginEnd="-89dp"
        android:layout_marginBottom="-109dp"
        android:src="@drawable/screen2img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="261dp"
        android:text="DERIVE CAPITAL"
        android:textColor="#2F046A"
        android:textSize="45dp"
        android:textStyle="bold"
        android:id="@+id/screentitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/screentitle"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="24dp"
        android:text="The"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/screenthe"/>


    <TextView
        android:id="@+id/screensmart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/screentitle"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@id/screenthe"
        android:text="Smart"
        android:textColor="#61E8BB"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/screennxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/screentitle"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@id/screensmart"
        android:text="Next Gen"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/screenmoneyapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/screenthe"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-121dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@id/screensmart"
        android:text="Money App"
        android:textColor="#61E8BB"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/screendriveup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/screenmoneyapp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-134dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/screensmart"
        android:background="@drawable/driveup"
        android:padding="10dp"
        android:text="#DRIVEUP"
        android:textColor="#4A07B5"
        android:textSize="28dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/screentxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/screendriveup"
        android:layout_centerInParent="true"
        android:layout_marginLeft="-136dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/screensmart"
        android:text="to begin saving 3X more than others!"
        android:textColor="#A3838381"
        android:textSize="23dp"
        android:paddingRight="20dp"
        android:padding="5dp"
        android:textStyle="bold" />


</RelativeLayout>